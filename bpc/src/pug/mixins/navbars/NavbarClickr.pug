mixin NavbarClickr
  nav.navbar.navbar-expand-lg.navbar-light.fixed-top.py-3.d-block(data-navbar-on-scroll)
    .container
      a.navbar-brand.d-inline-flex(href='index.html')
        img.card-img(src=`${CWD}assets/img/gallery/logo.png`  alt='...')
        span.fs-2.fw-bold.text-primary.ms-2
          | CLICK
          span.text-warning R
      button.navbar-toggler.collapsed(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse.border-top.border-lg-0.mt-4.mt-lg-0
        ul.navbar-nav.ms-auto.mb-2.mb-lg-0
          li.nav-item.px-2
            a.nav-link.fw-bold(aria-current='page', href='index.html' class= currentPage === 'index' ? 'active' : false ) Home
          li.nav-item.px-2
            a.nav-link.fw-bold(href='#howitworks') How it works
          li.nav-item.px-2
            a.nav-link.fw-bold(href='#services') Services
          li.nav-item.px-2
            a.nav-link.fw-bold(href='#packages') Packages
          li.nav-item.px-2
            a.nav-link.fw-bold(href='#faqs') FAQs 

        form.ms-lg-5
          a.btn.btn-primary(href='#!') Get started
