mixin FaqAltItem(config)
  h3.mb-3(class=`${config.titleTextColor}`)=config.title
  p.mb-5=config.description

mixin Faqs(config)
  +Section#faqs
    .row
      h1.text-center.lh-sm.mb-5.fs-lg-6.fs-xxl-7 FAQ
      .col-12
        .card
          .card-body.px-5.pb-0
            .row.gx-8
              .col-lg-6
                each faq in faqs.slice(0, Math.floor(faqs.length / 2) )
                  +FaqAltItem(faq)
              .col-lg-6
                each faq in faqs.slice(Math.floor(faqs.length / 2) )
                  +FaqAltItem(faq)

          